<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Comments</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
            <li class="breadcrumb-item active">All Comments</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">All Comments</h3>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            {{> messages}}
            <table id="example2" class="table table-bordered table-hover">
              <thead>
                <tr>
                  <th> Name</th>
                  <th> Email</th>
                  <th> Website</th>
                  <th> Comments</th>
                  <th>Date</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                {{#each comments}}
                <tr>
                  <td>{{this.commentName}}</td>
                  <td>{{this.commentEmail}}</td>
                  <td>{{this.commentWebsite}}</td>
                  <td>{{this.commentContent}}</td>
                  <td>{{this.created_at}}</td>
                  <td>
                    <a href="/comments/delete/{{this.id}}" class="btn btn-danger text-white btn-sm">Delete</a>
                  </td>

                </tr>
                {{/each}}
              </tbody>
              <tfoot>
                <tr>
                  <th>Rendering engine</th>
                  <th>Browser</th>
                  <th>Date</th>
                  <th>CSS grade</th>
                </tr>
              </tfoot>
            </table>
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->

        <!-- /.card -->
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </section>
  <!-- /.content -->
</div>