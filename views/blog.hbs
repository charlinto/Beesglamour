<!-- Page info section -->
<section class="page-info-section set-bg" data-setbg="/frontend/img/page-top-bg/2.jpg">
  <div class="container text-center">
    <h2>News Blog</h2>
  </div>
</section>


<section class="blog-section spad">
  <div class="site-section">
  <div class="container">
  <div class="row">
    <div class="col-lg-7">
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
          {{#each post}}
          {{#if @first}}
          <div class="carousel-item active">
            <img class="d-block img-caro w-300" src="{{this.postImage}}" alt="First slide">
            <div class="carousel-caption d-none d-md-block text-dark">
              <p>{{this.postName}} </p>
            </div>
          </div>
          {{else}}
          <div class="carousel-item">
            <img class="d-block  img-caro w-400" src="{{this.postImage}}" alt="Second slide">
            <div class="carousel-caption d-none d-md-block text-dark">
              <h5></h5>
              <p>{{this.postName}}</p>
            </div>
          </div>
          {{/if}}
          {{/each}}
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
      <div class="col-lg-5">
        <div class="featured-user ml-5 ">
          <h2 class="mb-4">Trending Posts</h3>
            <ul class="list-unstyled">
              {{#each post}}
              {{#if (gte this.postComments.length 2)}}
              <li>
                <a href="/post/{{this.id}}" class="d-flex align-items-center">
                  <img  class="img-trend" src="{{this.postImage}}" alt="Image" class="img-fluid mr-2">
                  <div class="podcaster">
                    <p class="d-block h5">{{this.postName}}</p>
                    <span>{{formatDate this.created_at 'MMMM Do YYYY, h:mm a'}}</span>
                  </div>
                </a>
              </li>
              {{/if}}
              {{/each}}

           
           
            </ul>
        </div>
      </div>
    
  </div>
</div>
</div>

<div class="site-section">
  <div class="container">
    <div class="row mb-5">
      <div class="col-12">
        <h2>Recent Posts</h2>
      </div>
    </div>
    <div class="row">
         {{#each post}}
          <div class="col-lg-3 mb-4">
            <div class="entry2">
              <a href="single.html"><img class="blogphoto" src="{{this.postImage}}" alt="Image" class="img-fluid rounded recent-img"></a>
              <div class="excerpt">
              <span class="post-category text-white bg-success mb-3">{{this.postCategory.categoryName}}</span>

              <h2><a href="single.html">{{this.postName}}</a></h2>
              <div class="post-meta align-items-center text-left clearfix">
                <figure class="author-figure mb-0 mr-3 float-left"><img src="{{this.postAuthor.profileImage}}" alt="Image" class="img-fluid"></figure>
                <span class="d-inline-block mt-1">By {{this.postAuthor.firstName}} {{this.postAuthor.lastName}}<a href="#"></a></span>
                <span>&nbsp;-&nbsp; July 19, 2019</span>
              </div>
              
                <p class="text-nowwrap text-truncate" style="width: 5rem;">{{this.postContent}}</p>
                <p><a href="/post/{{this.id}}">Read More</a></p>
              </div>
            </div>
          </div>
         {{/each}}
    </div>

