        <div class="pt-5">
          <p>Categories: <a href="#">Hair Dressing</a>, <a href="#">Make UP/Training</a>, <a href="#">Manicure & Pedicure</a>, <a
          </p>
        </div>

        <div class="pt-5">
          <h3 class="mb-5">{{post.postComments.length}} Comments</h3>
          <ul class="comment-list">
            {{#each post.postComments}}
            <li class="comment">
              <div class="vcard">
                <img src="{{this.commentUser}}" alt="Image placeholder">
              </div>
              <div class="comment-body">
                <h3>{{this.commentName}}</h3>
                <div class="meta">{{this.created_at}}</div>
                <p>{{this.commentContent}}</p>
                <p><a href="#" class="reply rounded">Reply</a></p>
              </div>
            </li>
            {{/each}}
          </ul>
       

          <div class="comment-form-wrap pt-5" id="comment_msg">
            {{> messages}}

            {{#if user}}
            <h4>Logged in as {{user.firstName}} {{user.lastName}}</h4>
            <h3 class="mb-5">Leave a comment</h3>
            <form action="/post/{{post.id}}/comment" method="POST" class="p-5 bg-light">
              <div class="form-group">
                <input type="hidden" class="form-control" id="name" name="comment_name"
                  value="{{user.firstName}} {{user.lastName}}">
              </div>
              <div class="form-group">
                <input type="hidden" class="form-control" id="email" name="comment_email" value="{{user.email}}">
              </div>
              <div class="form-group">
                <input type="hidden" class="form-control" id="website" name="comment_website">
              </div>

              <div class="form-group">
                <label for="message">Message</label>
                <textarea id="message" cols="30" rows="10" class="form-control" name="comment_content"></textarea>
              </div>
              <div class="form-group">
                <input type="submit" value="Post Comment" class="btn btn-primary">
              </div>

            </form>
            {{else}}
            <h3 class="mb-5">Leave a comment</h3>
            <form action="/post/{{post.id}}/comment" method="POST" class="p-5 bg-light">
              <div class="form-group">
                <label for="name">Name *</label>
                <input type="text" class="form-control" id="name" name="comment_name">
              </div>
              <div class="form-group">
                <label for="email">Email *</label>
                <input type="email" class="form-control" id="email" name="comment_email">
              </div>
              <div class="form-group">
                <label for="website">Website</label>
                <input type="url" class="form-control" id="website" name="comment_website">
              </div>

              <div class="form-group">
                <label for="message">Message</label>
                <textarea id="message" cols="30" rows="10" class="form-control" name="comment_content"></textarea>
              </div>
              <div class="form-group">
                <input type="submit" value="Post Comment" class="btn btn-primary">
              </div>

            </form>
            {{/if}}
          </div>
        </div>

      </div >
  </section>

