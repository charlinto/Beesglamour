<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>User Book appointment</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
            <li class="breadcrumb-item active">User Book appointment</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">User Book appointment</h3>
          </div>
          <!-- /.card-header -->
          <div class="card-body">

            <table id="example2" class="table table-bordered table-hover">
              <thead>
                <tr>
                  {{!-- <th>User Book appointment</th>
                  <th>Date</th> --}}
                  <th>Full Name</th>
                  <th>Email</th>
                  <th>Service</th>
                  <th>Phonenumber</th>
                  <th>Date</th>
                  <th>Message</th>
                  <th>Book.date</th>
                  <th>Actions</th>


                </tr>
              </thead>
              <tbody>
                {{#each book}}
                <tr>
                  <td>{{this.fullname}}</td>
                  <td>{{this.email}}</td>
                  <td>{{this.service}}</td>
                  <td>{{this.phonenumber}}</td>
                  <td>{{this.date}}</td>
                  <td>{{this.message}}</td>
                  <td>{{this.created_at}}</td>
                  <td>
                    <a href="/bookMes/delete/{{this.id}}" class="btn btn-danger text-white btn-sm">Delete</a>
                  </td>

                </tr>
                {{/each}}
              </tbody>
              <tfoot>
                <tr>
                  <th>Rendering engine</th>
                  <th>Browser</th>
                  <th>Date</th>
                  <th>CSS grade</th>
                </tr>
              </tfoot>

            </table>
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->

        <!-- /.card -->
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </section>
  <!-- /.content -->
</div>